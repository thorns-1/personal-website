<style is:global>
  main {
    margin: auto;
    padding: 1rem;
    width: 800px;
    max-width: calc(100% - 2rem);
    color: var(--main);
    font-size: 20px;
    line-height: 1.6;
  }

  .content {
    justify-content: center;
  }

  .wrapper {
    max-width: 100%;
    display: flex;
    flex-direction: column;
    align-items: center;
  }

  h2,
  h3,
  .links {
    margin: 8px 0;
  }

  .links a:hover svg path {
    fill: var(--link);
  }
</style>
